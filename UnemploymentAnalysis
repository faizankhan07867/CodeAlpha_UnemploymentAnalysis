# Step 1: Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Step 2: Load dataset (download from Kaggle link in PDF)
df = pd.read_csv("Unemployment in India.csv")  # rename file as per actual

print("First 5 rows:")
print(df.head())

# Step 3: Data Cleaning
print("\nDataset Info:")
print(df.info())

print("\nMissing Values:")
print(df.isnull().sum())

# Convert date column if needed
if "Date" in df.columns:
    df["Date"] = pd.to_datetime(df["Date"])

# Step 4: Exploratory Data Analysis
plt.figure(figsize=(10,5))
sns.lineplot(data=df, x="Date", y="Estimated Unemployment Rate (%)", hue="Region")
plt.title("Unemployment Rate Over Time (by Region)")
plt.xticks(rotation=45)
plt.show()

# Average unemployment by region
plt.figure(figsize=(8,5))
sns.barplot(data=df, x="Region", y="Estimated Unemployment Rate (%)", errorbar=None)
plt.xticks(rotation=90)
plt.title("Average Unemployment by Region")
plt.show()

# Step 5: Insights
print("\nDescriptive Statistics:")
print(df.describe())
